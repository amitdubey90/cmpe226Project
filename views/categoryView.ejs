    <!-- Page Content -->
    <div class="container">

        <!-- Portfolio Section -->
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">Category</h2>
            </div>
            <% for(var i=0; i< productList.length; i++) {%>
                <a href="../product/<%=productList[i]._id%>" style="text-decoration: none">
                    <div class="col-md-4 col-sm-6">
                        <div class="thumbnail">
                            <img class="img-responsive" src="<%=productList[i].imageUrl%>" style="max-height:220px" alt="<%= productList[i].productName%>">
                            <div class="caption">
                                <h3><%= productList[i].productName%><br>
                                    <small><%= productList[i].shortDesc%></small><br>
                                    <small><%= productList[i].price%></small>
                                </h3>
                            </div>
                        </div>
                    </div>
                </a>
            <% } %>
        </div>
        <!-- /.row -->

        <hr>

