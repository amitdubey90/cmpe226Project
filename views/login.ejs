<!DOCTYPE HTML>
<html>
<head>
    <title>Node App</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/bootstrap-responsive.css">
    <link rel="stylesheet" href="/css/site.css">
</head>
<body>

<div class="container">

    <div class="hero-unit reg=header">
        <h4>Sign In</h4>
    </div>

    <div id="regForm">
        <% if (locals.error) { %>
            <div class="control-group">
                <label class="control-label" for="username_input"><%= locals.error %></label>
            </div>
        <% } %>
        <form action="/user/login" method="POST" class="form-horizontal">
            <div class="control-group">
                <label class="control-label" for="email_input">Email</label>

                <div class="controls">
                    <input type="text" id="email_input" name="email">
                </div>
            </div>
            <div class="control-group">
                <label for="password_input" for="password_input" class="control-label">Password</label>

                <div class="controls">
                    <input type="password" id="password_input" name="password">
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <input type="submit" name="Submit" value="Login" class="btn">
                </div>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript" src="/js/jquery.js"></script>
<script type="text/javascript" src="/js/bootstrap.min.js"></script>
</body>
</html>